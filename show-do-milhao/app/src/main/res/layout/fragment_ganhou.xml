<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="jogador"
            type="br.com.danielamaral.show_do_milhao.model.Jogador" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CAF1CB"
        tools:context=".GanhouFragment">


        <ImageView
            android:id="@+id/ivVitoria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/sucesso"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvNomeJogador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10sp"
            android:gravity="center_horizontal"
            android:text="@={jogador.nome}"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivVitoria" />


        <Button
            android:id="@+id/btJogarDeNovo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E80D4E"
            android:text="Jogar de Novo"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNomeJogador" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>